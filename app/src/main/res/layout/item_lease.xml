<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/dp_15"
              android:background="@color/white"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_pic"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        fresco:placeholderImage="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:text="你好"
        android:paddingLeft="@dimen/dp_15"
        android:layout_toRightOf="@id/sdv_pic"
        />
    <TextView
        android:id="@+id/tv_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkGray"
        android:textSize="@dimen/sp_10"
        android:paddingLeft="@dimen/dp_15"
        android:layout_toRightOf="@id/sdv_pic"
        android:layout_below="@id/tv_name"
        />
    <TextView
        android:id="@+id/tv_rent_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="@dimen/sp_10"
        android:text="租借金额：￥"
        android:paddingLeft="@dimen/dp_15"
        android:layout_toRightOf="@id/sdv_pic"
        android:layout_below="@id/tv_introduction"
        />
    <TextView
        android:id="@+id/tv_rent_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="@dimen/sp_10"
        android:layout_toRightOf="@id/tv_rent_1"
        android:layout_below="@id/tv_introduction"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_portrait"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        fresco:placeholderImage="@mipmap/ic_launcher"
        fresco:roundAsCircle="true"
        android:layout_toRightOf="@id/sdv_pic"
        android:layout_below="@id/tv_rent_1"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_10"
        android:paddingLeft="@dimen/dp_15"
        android:layout_toRightOf="@id/sdv_portrait"
        android:layout_below="@id/tv_rent_1"
        android:layout_marginTop="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/tv_lease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="借"
        android:textColor="@color/orange"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/sel_publish_task_btn_bg"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:layout_margin="@dimen/dp_15"
        android:clickable="true"
        android:layout_below="@id/tv_rent_1"
        />
</RelativeLayout>