<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/iv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/topic_img1"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_tip"
        android:layout_centerVertical="true"
        android:text="@string/text_have_no_topic"
        android:textColor="@color/darkGray"
        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:id="@+id/tv_pulish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="@string/text_publish_topic"
        android:textColor="@color/orange"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/sel_publish_task_btn_bg"
        android:padding="@dimen/dp_10"
        android:layout_margin="@dimen/dp_15"
        android:clickable="true"
        />
</RelativeLayout>